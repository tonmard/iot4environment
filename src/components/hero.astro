---
import { Picture } from "astro:assets";
import Iot from "../assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-4 md:pt-12 md:pb-6">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src= {Iot}
      alt="Iot4Environment"
      width={[200, 400, 600]}
      size="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-4xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Development Iot Project with Iot4Environment.
    </h1>
    <p class="text-sm lg:text-lg mt-4 text-slate-600 max-w-xl">
     Inovasi Teknologi untuk Pemantauan Cerdas dan Pelestarian Lingkungan Global
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/pricing"
        
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-directions" />
        Our Project
      </Link>
      
    </div>
  </div>
</main>
